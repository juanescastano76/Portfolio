---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h2 class="text-white text-xl font-bold">
        Let's start working together!
      </h2>
    </header>
    <address class="flex flex-col mt-4">
      <h3 class="text-gray-500">Contact Details</h3>
      <p>juancastangaviria@gmail.com</p>
      <p>Colombia</p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h3 class="text-gray-500">Socials</h3>
      <ul>
        <li>
          <a href={LINKS.linkedin} target="_blank">Linkedin</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank">Github</a>
        </li>
        <li>
          <a href={LINKS.email} target="_blank">Email</a>
        </li>
        <li>
          <a href={LINKS.whatsapp} target="_blank">Whatsapp</a>
        </li>
        <li>
          <a href={LINKS.upwork} target="_blank">Upwork</a>
